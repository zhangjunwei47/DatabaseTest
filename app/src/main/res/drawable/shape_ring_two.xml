<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080.0">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="9"
        android:useLevel="false">
        <gradient
            android:endColor="@color/black_25_transparent_color"
            android:startColor="@color/white_50_transparent_color"
            android:type="sweep" />
        <stroke
            android:width="1dp"
            android:color="@color/gray_87_color" />
    </shape>
</rotate>